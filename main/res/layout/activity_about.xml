<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AboutActivity"
    android:id="@+id/social">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/lpu_banner"
        android:layout_gravity="center"
        android:contentDescription="App Icon" />

    <!-- App Name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade Management Application"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The prestegious Lovely Professional University"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- App Description -->
    <TextView
        android:id="@+id/tvAppDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Very good university which provides cool education to every poor people in the world."
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_200"
        android:layout_marginTop="16dp" />

    <!-- Contact Information -->
    <TextView
        android:id="@+id/tvContactInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Social Media Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Facebook Icon -->
        <ImageView
            android:id="@+id/FacebookIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fb_icon"
            android:contentDescription="Facebook Icon"
            android:layout_weight="1"
            android:layout_marginRight="8dp" />

        <!-- Twitter Icon -->
        <ImageView
            android:id="@+id/ivTwitterIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter_icon"
            android:contentDescription="Twitter Icon"
            android:layout_weight="1"
            android:layout_marginRight="8dp" />

        <!-- Instagram Icon -->
        <ImageView
            android:id="@+id/ivInstagramIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/insta_icon"
            android:contentDescription="Instagram Icon"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/goback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginTop = "200dp"/>

</LinearLayout>