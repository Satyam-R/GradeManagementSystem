<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/lshape"
    tools:context=".RegistrationActivity" >

    <ImageView
        android:layout_width="180dp"
        android:src="@drawable/fg"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account!"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="28sp"/>



    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#ECA337"
        app:boxStrokeColor="#ECA337"

        app:startIconTint="#ECA337"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textSize="14sp"
            android:inputType="text"

            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#ECA337"
        app:boxStrokeColor="#ECA337"
        app:startIconTint="#ECA337"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="14sp"
            android:inputType="text"

            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#ECA337"
        app:boxStrokeColor="#ECA337"
        app:startIconTint="#ECA337"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="14sp"
            android:inputType="text"

            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_baseline_lock_reset_24"
        style="@style/edit_text_layout"
        app:hintTextColor="#EA8F3F"
        app:boxStrokeColor="#ECA337"
        app:startIconTint="#EA8F3F"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="14sp"
            android:inputType="text"

            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background = "@drawable/back_bg2"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:text="Create Account"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/already"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>
</LinearLayout>
